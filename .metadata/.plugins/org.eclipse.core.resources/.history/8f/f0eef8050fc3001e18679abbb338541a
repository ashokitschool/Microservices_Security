server:
  port: 5555
  
spring:
  application:
    name: API-Gateway
    
  cloud:
    gateway:
      routes:
      - id: welcome-api
        uri: lb://WELCOME
        predicates:
        - Path=/welcome
        filters:
        - AuthenticationFilter
        
      - id: greet-api
        uri: lb://GREET
        predicates:
        - Path=/greet
        filters:
        - AuthenticationFilter
        
      - id: authentication-api
        uri: lb://AUTH-SERVICE
        predicates:
        - Path=/auth/**